create table tblEmployee
(   EmployeeID int primary key identity(1,1),
    Name varchar(50),
	Gender varchar(50),
	City varchar(50),
	DateOfBirth date
	
	);

	drop table tblEmployee
	
	
	insert into tblEmployee (Name, Gender, City)
	values ('Igor', 'Muško', 'Zagreb'); 

	insert into tblEmployee (Name, Gender, City)
	values ('Roberto', 'Muško', 'Zagreb');

	insert into tblEmployee (Name, Gender, City)
	values ('Anamarija', 'Žensko', 'Zagreb');

	select * from tblEmployee where EmployeeID = 1

